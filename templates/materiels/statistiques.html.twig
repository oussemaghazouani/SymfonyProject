{% extends 'base.html.twig' %}

{% block title %}Materiels index{% endblock %}

{% block body %}
    <!-- Assurer que le corps de la page occupe toute la hauteur de l'écran -->
    <div style="margin-top: 10px;"></div>

    <h1 style="font-size: 3rem; color: red; font-weight: bold; text-align: center; margin-bottom: 30px; text-decoration: underline;">Liste des Matériels</h1>

    <table style="width: 100%; margin-top: 20px; border-collapse: collapse;">
        <thead>
            <tr style="background-color: #f2f2f2; color: black; text-align: center;">
                <th style="padding: 10px;">ID</th>
                <th style="padding: 10px;">Nom</th>
                <th style="padding: 10px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for materiel in materiels %}
                <tr style="background-color: #f9f9f9; text-align: center;">
                    <td style="padding: 10px;">{{ materiel.id }}</td>
                    <td style="padding: 10px;">{{ materiel.name }}</td>
                    <td style="padding: 10px;">
                        <a href="{{ path('app_materiels_showw', {'id': materiel.id}) }}" 
                           style="padding: 5px 10px; background-color: red; color: white; text-decoration: none; border-radius: 5px;">
                           Afficher
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" style="text-align: center; padding: 10px; color: black;">Aucun matériel trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Espace supplémentaire pour allonger la page -->
    <div style="margin-top: 50px; height: 300px; background-color: #f8f9fa;"></div>
{% endblock %}
