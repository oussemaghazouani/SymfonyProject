{% extends 'base.html.twig' %}

{% block title %}Matériel Détails{% endblock %}

{% block body %}
    <h1 style="font-size: 3rem; color: red; font-weight: bold; text-align: center; margin-bottom: 30px; text-decoration: underline;">Détails du Matériel</h1>

    <table style="width: 100%; margin-top: 20px; border-collapse: collapse; background-color: #d0d0d0;"> <!-- Fond plus foncé -->
        <tbody>
            <tr style="background-color: #f2f2f2; text-align: center;"> <!-- Ligne claire pour l'ID -->
                <th style="padding: 10px; text-align: left; color: #4f4f4f;">Id</th> <!-- Gris foncé -->
                <td style="padding: 10px;">{{ materiel.id }}</td>
            </tr>
            <tr style="background-color: #f2f2f2; text-align: center;"> <!-- Ligne claire pour le Nom -->
                <th style="padding: 10px; text-align: left; color: #4f4f4f;">Nom</th> <!-- Gris foncé -->
                <td style="padding: 10px;">{{ materiel.name }}</td>
            </tr>
            <tr style="background-color: #f2f2f2; text-align: center;"> <!-- Ligne claire pour le Type -->
                <th style="padding: 10px; text-align: left; color: #4f4f4f;">Type</th> <!-- Gris foncé -->
                <td style="padding: 10px;">
                    {{ materiel.type ? materiel.type.name : 'Aucun type défini' }}
                </td>
            </tr>
        </tbody>
    </table>

    <div style="margin-top: 20px; text-align: center;">
        <a href="{{ path('app_materiels_index') }}" 
           style="padding: 10px 20px; background-color: red; color: white; text-decoration: none; border-radius: 5px;">
           Retour à la liste
        </a>
    </div>

{% endblock %} 