{% extends 'basedash.html.twig' %}

{% block title %}Produit{% endblock %}

{% block table %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>EstDisponible</th>
                <td>{{ produit.EstDisponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.Description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if produit.image %}
                        <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="Image produit" width="150">
                    {% else %}
                        <span>No image available</span>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">Back to list</a>
    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">Edit</a>
    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
