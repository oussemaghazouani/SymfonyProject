<div class="container mt-4">
    <div class="bg-secondary rounded p-4 mx-auto" style="max-width: 600px;">
        <h6 class="mb-4">Produit Form</h6>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.EstDisponible, 'Est Disponible', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.EstDisponible, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_errors(form.EstDisponible) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.Description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.Description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.Description) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.imageFile, 'Image', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.imageFile) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.TypeP, 'Type Produit', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.TypeP, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.TypeP) }}
        </div>

        <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>

        {{ form_end(form) }}
    </div>
</div>
