{% extends 'basedash.html.twig' %}

{% block title %}Create New User{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4 text-center text-uppercase text-secondary">Create New User</h2>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">User Form</h5>
        </div>
        <div class="card-body p-4">
            <form>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="bg-light text-primary">Nom</th>
                            <td>
                                <input type="text" name="nom" class="form-control" placeholder="Enter user's name">
                            </td>
                        </tr>
                        <tr>
                            <th class="bg-light text-primary">Email</th>
                            <td>
                                <input type="email" name="email" class="form-control" placeholder="Enter user's email">
                            </td>
                        </tr>
                        <tr>
                            <th class="bg-light text-primary">Mot de passe</th>
                            <td>
                                <input type="password" name="motdepasse" class="form-control" placeholder="Enter user's password">
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="text-end mt-3">
                    <button type="submit" class="btn btn-success px-4">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
</div>
{% endblock %}
