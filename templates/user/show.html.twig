{% extends 'basedash.html.twig' %}
{% block title %}User Details{% endblock %}


{% block body %}
<div class="container mt-5">
    <!-- Page Title -->
    <h2 class="mb-4 text-center text-uppercase text-secondary fw-bold">User Details</h2>

    <!-- Card Container -->
    <div class="card shadow-lg border-0">
        <!-- Card Header -->
        <div class="card-header bg-gradient bg-primary text-white">
            <h5 class="mb-0">User Information</h5>
        </div>

        <!-- Card Body with Table -->
        <div class="card-body p-4">
            <table class="table table-striped table-hover align-middle">
                <tbody>
                    <tr>
                        <th class="text-primary fw-bold">ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-primary fw-bold">Name</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th class="text-primary fw-bold">Email</th>
                        <td>{{ user.EMAIL }}</td>
                    </tr>
                    <tr>
                        <th class="text-primary fw-bold">Password</th>
                        <td>{{ user.motdepasse }}</td>
                    </tr>
                    <tr>
                        <th class="text-primary fw-bold">Role</th>
                        <td>{{ user.role }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4 d-flex justify-content-between align-items-center">
        <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary btn-lg">Back to List</a>
        <div>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-warning btn-lg me-2">Edit</a>
            {{ include('user/_delete_form.html.twig', {'class': 'd-inline'}) }}
        </div>
    </div>
</div>
{% endblock %}
