{% extends 'basedash.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">Edit User</h2>

    <!-- Include the form with a custom button label "Update" -->
    <div class="card p-4 shadow-sm">
        {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
    </div>

    <!-- Link to go back to the user list -->
    <a href="{{ path('app_user_index') }}" class="btn btn-secondary mt-3">Back to list</a>

    <!-- Include the delete form for the user -->
    <div class="mt-4">
        <h5>Danger Zone</h5>
        <div class="alert alert-danger">
            <p>If you want to delete this user, use the button below.</p>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}



